body
  div 
    div
      ul
        li
          a(href="/getfood" style='margin-left:10px;') getfood
        li
          a(href="/addfood.html" style='margin-left:10px;') Add food
        li
          a(href="/ordersgot" style='margin-left:10px;') myorders 
        li
          a(href="/placedfood" style='margin-left:10px;') placed
        li
          a(href="/uploadfood" style='margin-left:10px;') uploads
        
        li(style='float:right')
            a(href="/logout") Logout
        
        li(style='float:right')
            a()=user
    
        
      div 
          form.form-select.form-select-lg(action="/displayfood" method="POST" name="getfoods" style="margin-left:40%;margin-top:20px;margin-bottom:20px;margin-right:20px;")
            select(name="loc")
                option(value="select") all
                each val in food
                    option(value=val.location) #{val.location}
            button.btn.btn-info(type="submit") Submit
      div

      .card-group.m-2
          each item,index in food
            if pla=="all"
                .card
                    img(src=item.img  alt='a snow-capped mountain range' style='height:150px;')
                    .card-body
                        h2.card-title          #{item.name}
                        p.card-text Remarks :  #{item.remark}
                        p.card-text location :  #{item.location}
                        p.card-text price :  #{item.price}
                        p.card-text delivery :  #{item.delivery}
                        a.btn.btn-secondary(href="/ordered/"+item.id) BuyNow
            else if item.location==pla
                .card
                    img(src=item.img  alt='a snow-capped mountain range' style='height:150px;')
                    .card-body
                        h2.card-title          #{item.name}
                        p.card-text Remarks :  #{item.remark}
                        p.card-text location :  #{item.location}
                        p.card-text price :  #{item.price}
                        p.card-text delivery :  #{item.delivery}
                        a.btn.btn-secondary(href="/ordered/"+item.id) BuyNow